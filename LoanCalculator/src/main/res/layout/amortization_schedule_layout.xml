<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/monthNumberOnScheduleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.3"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="4dp"
        android:textAlignment="center"
        android:text="" />

    <TextView
        android:id="@+id/monthlyPrincipalOnScheduleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.4"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:textAlignment="textEnd"
        android:text="" />

    <TextView
        android:id="@+id/monthlyInterestOnScheduleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.2"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="2dp"
        android:textAlignment="textEnd"
        android:text="" />

    <TextView
        android:id="@+id/updatedTotalInterestPaidOnScheduleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.6"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:textAlignment="textEnd"
        android:text="" />

    <TextView
        android:id="@+id/updatedRemainingLoanAmountOnScheduleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:textAlignment="textEnd"
        android:text="" />

</LinearLayout>